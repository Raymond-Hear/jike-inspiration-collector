{
  "manifest_version": 3,
  "name": "即刻灵感收集器",
  "version": "0.0.1",
  "description": "从即刻的深度内容中挖掘灵感，为Vibe Coding提供选题来源",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "storage",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://web.okjike.com/*", "*://okjk.co/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
